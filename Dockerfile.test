# Use Node.js LTS
FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci

# Copy source code and tests
COPY src/ ./src/
COPY tests/ ./tests/

# Build the application
RUN npm run build

# Default command runs tests
CMD ["npm", "run", "test"]
